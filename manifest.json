{
    "name": "Binance Enhancement Suite",
    "description": "User interface enhancements for the Binance cryptocurrency exchange.  This extension is NOT affiliated with Binance.",
    "version": "0.2",
    "permissions": [
    "activeTab",
    "storage"
    ],
    "icons": { 
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png" 
    },
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
        "matches": [
            "https://www.binance.com/userCenter/balances.html"
            ],
        "css": ["jquery-ui-1.12.1/jquery-ui.min.css","jquery-ui-1.12.1/jquery-ui.theme.min.css","jquery-ui-1.12.1/jquery-ui.structure.min.css","balances.css"],
        "js": ["jquery-3.3.1.slim.min.js", "jquery-ui-1.12.1/jquery-ui.min.js", "Chart.min.js", "constants.js","currency.js","sort.js","filter.js", "piechart.js"],
        "run_at": "document_end"
        }
    ], 
    "web_accessible_resources": [
        "images/*.png"
    ],
    "manifest_version":2
}